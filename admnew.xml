<?xml version="1.0" encoding="UTF-8"?>
<nta>
  <declaration>chan grant; chan patent; chan pub; chan coin;</declaration>
  <template>
    <name>Administration</name>
    <declaration>clock z;</declaration>
    <location id="L0" x="0" y="0">
      <name>L0</name>
      <label kind="invariant">true</label>
    </location>
    <location id="L1" x="0" y="0">
      <name>L1</name>
      <label kind="invariant">z&lt;=2</label>
    </location>
    <location id="L2" x="0" y="0">
      <name>L2</name>
      <label kind="invariant">true</label>
    </location>
    <location id="L3" x="0" y="0">
      <name>L3</name>
      <label kind="invariant">z&lt;=2</label>
    </location>
    <init ref="L0" />
    <transition>
      <source ref="L0" />
      <target ref="L1" />
      <label kind="synchronisation">grant?</label>
      <label kind="guard">true</label>
      <label kind="assignment">z = 0</label>
    </transition>
    <transition controllable="false">
      <source ref="L1" />
      <target ref="L2" />
      <label kind="synchronisation">coin!</label>
      <label kind="guard">true</label>
      <label kind="assignment" />
    </transition>
    <transition>
      <source ref="L2" />
      <target ref="L3" />
      <label kind="synchronisation">pub?</label>
      <label kind="guard">true</label>
      <label kind="assignment">z = 0</label>
    </transition>
    <transition controllable="false">
      <source ref="L3" />
      <target ref="L0" />
      <label kind="synchronisation">patent!</label>
      <label kind="guard">true</label>
      <label kind="assignment" />
    </transition>
    <transition>
      <source ref="L1" />
      <target ref="L1" />
      <label kind="synchronisation">grant?</label>
      <label kind="guard">z&lt;=2</label>
      <label kind="assignment" />
    </transition>
    <transition>
      <source ref="L1" />
      <target ref="L1" />
      <label kind="synchronisation">pub?</label>
      <label kind="guard">z&lt;=2</label>
      <label kind="assignment" />
    </transition>
    <transition>
      <source ref="L2" />
      <target ref="L2" />
      <label kind="synchronisation">grant?</label>
      <label kind="guard">true</label>
      <label kind="assignment" />
    </transition>
    <transition>
      <source ref="L3" />
      <target ref="L3" />
      <label kind="synchronisation">grant?</label>
      <label kind="guard">z&lt;=2</label>
      <label kind="assignment" />
    </transition>
    <transition>
      <source ref="L3" />
      <target ref="L3" />
      <label kind="synchronisation">pub?</label>
      <label kind="guard">z&lt;=2</label>
      <label kind="assignment" />
    </transition>
    <transition>
      <source ref="L0" />
      <target ref="L0" />
      <label kind="synchronisation">pub?</label>
      <label kind="guard">true</label>
      <label kind="assignment" />
    </transition>
  </template>
  <system>system Administration;</system>
</nta>
